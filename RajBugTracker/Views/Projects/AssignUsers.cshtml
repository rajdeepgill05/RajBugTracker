@model RajBugTracker.Models.ProjectAssignViewModel
@{
    ViewBag.Title = "AssignUsers";
}

<h2>AssignUsers</h2>

<div id="page-wrapper">

    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Assign Users
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i>  <a href="/home">Dashboard</a>
                    </li>
                    <li class="active">
                        <i class="fa fa-file"></i> Assign USers
                    </li>
                </ol>

            </div>
        </div>
        <!-- /.row -->
        <!-- /.container-fluid -->
        <section class="content">
            @using (Html.BeginForm())
            {
                @Html.HiddenFor(p => p.Id)

                @Html.ListBoxFor(p => p.SelectedUsers, Model.UserList)

                <input type="submit" value="Submit!" />
            }
        </section>
    </div>
    
</div>

<!-- /#page-wrapper -->